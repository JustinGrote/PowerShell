{
    "version": "2.0.0",

    "windows": {
        "options": {
            "shell": {
                "executable": "pwsh.exe",
                "args": [
                    "-NoProfile",
                    "-ExecutionPolicy",
                    "Bypass",
                    "-Command"
                ]
            }
        }
    },
    "linux": {
        "options": {
            "shell": {
                "executable": "/usr/bin/pwsh",
                "args": [
                    "-NoProfile",
                    "-Command"
                ]
            }
        }
    },
    "osx": {
        "options": {
            "shell": {
                "executable": "/usr/local/bin/pwsh",
                "args": [
                    "-NoProfile",
                    "-Command"
                ]
            }
        }
    },

    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "Import-Module '${workspaceFolder}/build.psm1'; Start-PSBuild -Output (Join-Path '${workspaceFolder}' debug)",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build - Clean",
            "type": "shell",
            "command": "Import-Module '${workspaceFolder}/build.psm1'; Start-PSBuild -Clean -Output (Join-Path '${workspaceFolder}' debug)",
            "group": {
                "kind": "build",
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Bootstrap",
            "type": "shell",
            "command": "Import-Module '${workspaceFolder}/build.psm1'; Start-PSBootstrap",
            "problemMatcher": []
        },
        {
            "label": "Test",
            "dependsOn": [
                "Test - Pester",
                "Test - xUnit"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Test - Pester",
            "type": "shell",
            "command": "Import-Module '${workspaceFolder}/build.psm1'; Start-PSPester -powershell '${workspaceFolder}/debug'",
            "group": {
                "kind": "test",
            },
        },
        {
            "label": "Test - xUnit",
            "type": "shell",
            "command": "Import-Module '${workspaceFolder}/build.psm1'; Start-PSXUnit",
            "group": {
                "kind": "test"
            }
        }
    ]

}
