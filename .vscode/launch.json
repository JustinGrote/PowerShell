{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell Dev Console",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceRoot}/debug/pwsh",
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "justMyCode": false,
            "processId": "${command:pickProcess}"
        },
        {
            "type": "PowerShell",
            "request": "launch",
            "name": "PowerShell Launch Current File",
            "script": "${file}",
            "args": [],
            "cwd": "${file}"
        },
        {
            "type": "PowerShell",
            "request": "launch",
            "name": "PowerShell Launch Current File w/Args Prompt",
            "script": "${file}",
            "args": [
                "${command:SpecifyScriptArgs}"
            ],
            "cwd": "${file}"
        }
    ]
}
